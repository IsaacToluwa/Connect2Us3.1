@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using Connect2Us3._01.Models

@*@if (Request.IsAuthenticated)*@
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Hello @User.Identity.GetUserName()!
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li>@Html.ActionLink("Manage Account", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                @if (User.IsInRole("Customer"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li>@Html.ActionLink("My Orders", "Index", "Orders", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Shopping Cart", "Index", "ShoppingCarts", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Wishlist", "Index", "Wishlists", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("My Reviews", "Index", "Reviews", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                }
                @if (User.IsInRole("Staff") || User.IsInRole("Admin"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li class="dropdown-header">Staff Functions</li>
                    <li>@Html.ActionLink("Manage Orders", "Index", "Orders", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Manage Deliveries", "Index", "Deliveries", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Manage Payments", "Index", "Payments", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Notifications", "Index", "Notifications", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li class="dropdown-header">Admin Functions</li>
                    <li>@Html.ActionLink("User Management", "Index", "RoleManagement", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Manage Authors", "Index", "Authors", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                }
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}