@{
    ViewBag.Title = "Home";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Welcome to Connect2Us</h1>
                <p class="lead mb-4">Your ultimate book connection platform. Discover, share, and connect with fellow book lovers around the world.</p>
                <div class="d-flex gap-3">
                    @Html.ActionLink("Browse Books", "Index", "Books", null, new { @class = "btn btn-light btn-lg" })
                    @Html.ActionLink("Join Community", "Register", "Account", null, new { @class = "btn btn-outline-light btn-lg" })
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-book-open" style="font-size: 8rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="h1 mb-3">Why Choose Connect2Us?</h2>
            <p class="lead text-muted">Discover the features that make us the best book platform</p>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-search text-primary mb-3" style="font-size: 3rem;"></i>
                    <h4 class="card-title">Discover Books</h4>
                    <p class="card-text">Find your next favorite book from our extensive collection across all genres.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-users text-primary mb-3" style="font-size: 3rem;"></i>
                    <h4 class="card-title">Connect with Readers</h4>
                    <p class="card-text">Join a community of passionate readers and share your thoughts and reviews.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-shopping-cart text-primary mb-3" style="font-size: 3rem;"></i>
                    <h4 class="card-title">Easy Shopping</h4>
                    <p class="card-text">Purchase or rent books with our simple and secure shopping experience.</p>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.FeaturedBooks != null && ((IEnumerable<dynamic>)ViewBag.FeaturedBooks).Any())
    {
        <!-- Featured Books Section -->
        <div class="row mb-5">
            <div class="col-12 text-center mb-4">
                <h2 class="h1 mb-3">Featured Books</h2>
                <p class="lead text-muted">Check out our most popular and recommended books</p>
            </div>
            @foreach (var book in (IEnumerable<dynamic>)ViewBag.FeaturedBooks)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text text-muted">@book.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-primary fw-bold">$@book.Price</span>
                                @Html.ActionLink("View Details", "Details", "Books", new { id = book.BookID }, new { @class = "btn btn-outline-primary btn-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (ViewBag.Categories != null && ((IEnumerable<dynamic>)ViewBag.Categories).Any())
    {
        <!-- Categories Section -->
        <div class="row mb-5">
            <div class="col-12 text-center mb-4">
                <h2 class="h1 mb-3">Browse by Category</h2>
                <p class="lead text-muted">Explore books by your favorite genres</p>
            </div>
            @foreach (var category in (IEnumerable<dynamic>)ViewBag.Categories)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm category-card">
                        <div class="card-body text-center p-3">
                            <h6 class="card-title mb-0">@category.CategoryName</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Call to Action Section -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body text-center p-5">
                    <h2 class="h1 mb-3">Ready to Start Your Reading Journey?</h2>
                    <p class="lead mb-4">Join thousands of book lovers who have already discovered their next favorite read.</p>
                    <div class="d-flex justify-content-center gap-3">
                        @Html.ActionLink("Sign Up Now", "Register", "Account", null, new { @class = "btn btn-primary btn-lg" })
                        @Html.ActionLink("Browse Books", "Index", "Books", null, new { @class = "btn btn-outline-primary btn-lg" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }
    
    .category-card {
        transition: transform 0.2s ease-in-out;
        cursor: pointer;
    }
    
    .category-card:hover {
        transform: translateY(-5px);
    }
    
    .card {
        transition: box-shadow 0.2s ease-in-out;
    }
    
    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}