@model IEnumerable<Connect2Us3._01.Models.UserRoleViewModel>

@{
    ViewBag.Title = "Role Management";
}

<h2>Role Management</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">User Roles</h3>
                <div class="pull-right">
                    @using (Html.BeginForm("InitializeRoles", "RoleManagement", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-info">Initialize Roles</button>
                    }
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Email</th>
                                <th>Current Roles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (user.Roles.Any())
                                        {
                                            foreach (var role in user.Roles)
                                            {
                                                <span class="label label-primary">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No roles assigned</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Assign Roles", "AssignRole", new { id = user.UserId }, new { @class = "btn btn-sm btn-primary" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Role Descriptions</h3>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>Admin</dt>
                    <dd>Full access to all features including user management, role assignment, and system administration.</dd>
                    
                    <dt>Staff</dt>
                    <dd>Access to manage books, orders, deliveries, payments, and customer support functions.</dd>
                    
                    <dt>Customer</dt>
                    <dd>Access to browse books, manage shopping cart, place orders, write reviews, and manage personal account.</dd>
                </dl>
            </div>
        </div>
    </div>
</div>